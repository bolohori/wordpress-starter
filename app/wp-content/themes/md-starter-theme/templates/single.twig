{% extends "layouts/default.twig" %}

{% block html_class "single" %}

{% block content %}
  <section class="section">
    <div class="container is-fluid">
      <div class="columns">
        <div class="column">
          <div class="content is-medium">
            <h1 class="title is-1">{{post.title}}</h1> 

            {{post.content}}
          </div>
        </div>
      </div>
    </div>
  </section>

  {% if posts|length %}
    <section class="section">
      <div class="container is-fluid">
        <div class="columns">
          <div class="column">
              <p class="title is-3">{{__('Articles suggérés', 'md-starter-theme')}}</p>
              
              <ul>
                {% for post in posts %}
                  <li class="title is-5">
                    <a href="{{post.link}}">{{post.title}}</a>
                  </li>
                {% endfor %}
              </ul>
          </div>
        </div>
      </div>
    </section>
  {% endif %}
{% endblock %}
